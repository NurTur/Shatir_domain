{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,

    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

